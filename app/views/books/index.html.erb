<!DOCTYPE html>
  <html>
    <head>
    </head>
    <body>
      <p id="notice"><%= flash[:notice] %></p>
        <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <%= @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", show_book_path(@book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", destroy_book_path(@book.id) %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Body</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </body>
  </html>